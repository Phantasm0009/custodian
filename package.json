{
  "name": "archivemind-discord-bot",
  "version": "1.0.0",
  "description": "All-in-one channel lifecycle manager that automates archiving inactive channels and rescues valuable resources to create a searchable knowledge base",
  "main": "dist/bot.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/bot.js",
    "dev": "npm run db:generate && ts-node src/bot.ts",
    "watch": "nodemon --exec ts-node src/bot.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force",
    "deploy": "npm run build && npm run db:push",
    "clean": "rm -rf dist coverage logs"
  },
  "keywords": [
    "discord",
    "bot",
    "archive",
    "knowledge-base",
    "typescript",
    "archivemind"
  ],
  "author": "ArchiveMind Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "@prisma/extension-accelerate": "^2.0.1",
    "axios": "^1.9.0",
    "canvas": "^3.1.0",
    "discord.js": "^14.19.3",
    "dotenv": "^16.5.0",
    "jspdf": "^3.0.1",
    "luxon": "^3.4.4",
    "pgvector": "^0.2.0",
    "prisma": "^6.9.0",
    "puppeteer": "^22.15.0",
    "sharp": "^0.34.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/luxon": "^3.3.7",
    "@types/node": "^20.19.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}