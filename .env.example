# Discord Configuration
DISCORD_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=your_application_id_here

# Database Configuration (Choose one)
# Option 1: Local PostgreSQL
# DATABASE_URL="postgresql://username:password@localhost:5432/archivemind?schema=public"

# Option 2: Prisma Accelerate (Cloud) - Recommended for production
DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=your_api_key"

# Bot Configuration
ARCHIVE_LIBRARY_CHANNEL_ID=your_archive_library_channel_id
NODE_ENV=development
LOG_LEVEL=info

# Archive Settings (Global defaults)
DEFAULT_INACTIVITY_DAYS=30
GRACE_PERIOD_DAYS=7
MAX_RESOURCES_PER_MESSAGE=10

# File Upload Settings
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=pdf,docx,txt,md,png,jpg,jpeg,gif,mp4,mov,zip,rar

# Search Configuration
SEARCH_RESULTS_LIMIT=50
VECTOR_SEARCH_THRESHOLD=0.7

# Global Bot Settings (Optional)
BOT_WEBSITE_URL=https://your-bot-website.com
BOT_SUPPORT_URL=https://discord.gg/your-support-server
BOT_PRIVACY_URL=https://your-bot-website.com/privacy
BOT_TERMS_URL=https://your-bot-website.com/terms

# Analytics (Optional)
ANALYTICS_ENABLED=true
METRICS_WEBHOOK_URL=your_metrics_webhook_url

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_COMMANDS_PER_HOUR=100